<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/cl_addpostitem_layout"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:layout_margin="8dp"
                                             android:background="@drawable/frame_1dp"
                                             android:orientation="vertical"
                                             tools:layout_editor_absoluteX="0dp"
                                             tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/iv_addpostitem_formatbold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="TODO"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_format_bold_black_24dp"/>

    <ImageView
        android:id="@+id/iv_addpostitem_formatitalic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="TODO"
        android:padding="8dp"
        app:layout_constraintStart_toEndOf="@+id/iv_addpostitem_formatbold"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_format_italic_black_24dp"/>

    <ImageView
        android:id="@+id/iv_addpostitem_formatsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="TODO"
        android:padding="8dp"
        app:layout_constraintStart_toEndOf="@+id/iv_addpostitem_formatitalic"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_format_size_black_24dp"/>

    <ImageView
        android:id="@+id/iv_addpostitem_deletetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="TODO"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_delete_black_24dp"/>

    <EditText
        android:id="@+id/et_addpostitem_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:inputType="textCapSentences|textMultiLine"
        android:singleLine="false"
        android:hint="Type text content here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_addpostitem_deletetext"/>

</android.support.constraint.ConstraintLayout>